@model IEnumerable<Garage20.Models.Vehicle>

@{
    ViewBag.Title = "Index";
    var selectList = new SelectList(Enum.GetValues(typeof(Garage20.Models.VehicleType)));
}

@if (ViewBag.AllVehicles)
{
   <h2>Index</h2>
}
else
{
    <h2>@ViewBag.VehicleType</h2>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Regnr)
        </th>
        <th>
            <a href="?orderBy=color">
                @Html.DisplayNameFor(model => model.Color)
            </a>
        </th>
        <th>
            <a href="?orderBy=wheels">
                @Html.DisplayNameFor(model => model.NumberOfWheels)
            </a>
        </th>
        @if (ViewBag.AllVehicles)
        {
            <th>
            @Html.DropDownList("VehicleType", selectList, "Vehicle Type",
                 new { onChange = $"document.location.href = '?filter=' + this.value" })
            </th>
        }
        <th>
            <a href="?orderBy=checkin">
                @Html.DisplayNameFor(model => model.Checkin)
            </a>
        </th>
        <th>
            <a href="?orderBy=checkout">
                @Html.DisplayNameFor(model => model.Checkout)
            </a>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Regnr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfWheels)
            </td>
            @if (ViewBag.AllVehicles)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Checkin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Checkout)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
